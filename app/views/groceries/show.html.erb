<div class="list-body">
    <h1 class="list-name"><%= @list.title %></h1>
    <br>
    <p style="text-align:center"><%= @list.purchase_date %></p>
    <p><%= @list.cost %></p>
    <p><%= @list.notes%></p>

    <br>
    <br>
    <section class="section comments">
        <div class="container">
            <h2 class="subtitle is-5"><strong><%= @list.foods.count %></strong> Foods</h2>

        <table class="table">
        <thead>
        <tr>
            <th colspan="">Food Item</th>
            <th colspan="">Expiration date</th>
            <th colspan="">Protein</th>
            <th colspan="">Carbs</th>
            <th colspan="">Fats</th>
            <th colspan="">Total calories</th>
        </tr>
        </thead>
    
        <tbody>
        <% @list.foods.each do |f| %>
            <tr>
            <td><%= f.item_name %></td>
            <td><%= f.expiration_date%></td> 
            <td><%= f.protein %></td>
            <td><%= f.carbs %></td>
            <td><%= f.fats %></td> 
            <td><%= @total_calories %></td> 
            
            </tr>
        <% end %>
        </tbody>
    </table>

            <div class="comment-form">
                <hr />
               
                <%= render 'foods/form' %>
            </div>
        </div>
    </section>
</div>