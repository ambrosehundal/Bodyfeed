- provide(:title, "Edit user")
%h1 Update your grocery lists
.row
  .col-md-6.col-md-offset-3
    = form_for @food, :url => url_for(:controller => 'foods', :action => 'update') do |f|
      = f.label :name
      = f.text_field :item_name, class: 'form-control'
      = f.label :expiration_date
      = f.date_field :expiration_date, class: 'form-control'
      = f.label :Protein
      = f.number_field :protein, class: 'form-control'
      = f.label :Carbs
      = f.number_field :carbs, class: 'form-control'
      = f.label :Fats
      = f.number_field :fats, class: 'form-control'
      = f.label :Quantity
      = f.number_field :quantity, class: 'form-control'

      = f.submit "Save changes", class: "btn btn-primary"