    .col-lg-3.twitter_list
      %a.twitter-timeline{"data-height" => "800", "data-theme" => "dark", "data-width" => "500", href: "https://twitter.com/Armdose82/lists/health-and-nutrition?ref_src=twsrc%5Etfw"} A Twitter List by Armdose82
      %script{async: "", charset: "utf-8", src: "https://platform.twitter.com/widgets.js"}
  .row
    .col-lg-6
      %h1.meetup Meetup Events near me
      %table.table-bordered.table.table-hover.table-dark.table-marg
        %thead
          %tr
            %th Event Name
            %th Status
            %th Date
            %th Local Time
            %th Details
        %tbody
          - @events.each do |event|
            %tr
              %td= event["name"]
              %td= event["status"]
              %td= event["local_date"]
              %td= event["local_time"]
              %td= link_to event["link"]

      %br/

