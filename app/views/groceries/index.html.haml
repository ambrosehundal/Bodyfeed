  %h1 Bodyfeed
  .row
    .col-lg-8
      %table.table.table-dark
        %thead
          %tr
            %th{colspan: ""} Title
            %th{colspan: ""} Date Purchased
            %th{colspan: ""} Total Cost
            %th{colspan: ""} Notes
        %tbody
          - @lists.each do |f|
            %tr
              %td= link_to f.title, grocery_path(f)
              %td= f.purchase_date
              %td= f.cost
              %td= f.notes
      =link_to "Create a new list", new_grocery_path
